{
  "name": "@prp/nebula-ui",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern React component library built with Preact and Tailwind CSS",
  "keywords": [
    "preact",
    "react",
    "components",
    "ui",
    "tailwind",
    "typescript"
  ],
  "author": "PRachwal",
  "license": "MIT",
  "homepage": "https://github.com/PRachwal/preact-nebula-ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PRachwal/preact-nebula-ui.git"
  },
  "bugs": {
    "url": "https://github.com/PRachwal/preact-nebula-ui/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run update-coverage && tsc -b && vite build",
    "build:lib": "npm run update-coverage && vite build --mode lib",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "update-coverage": "node scripts/update-coverage.js",
    "coverage:json": "vitest run --coverage --coverage.reporter=json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build:lib && npm run test",
    "publish:dry": "npm publish --dry-run",
    "publish:npm": "npm publish --access public"
  },
  "peerDependencies": {
    "preact": "^10.26.9"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "preact-router": "^4.1.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "eslint-plugin-preact": "^0.1.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.1.9"
  }
}
